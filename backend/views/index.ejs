  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
<div id="bodydiv">
 
    <div class="header">
       <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-content">
      <button class="close-btn" id="close-btn">&times;</button>
      <h2>Menu</h2>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="about">About</a></li>
        <li><a href="#">Services</a></li>
        <li><a href="contact">Contact</a></li>
        <li class="bottom">&copy; 2025 Drainage Block Alert System. All Rights Reserved.</li>
      </ul>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="toggle-btn" id="toggle-btn">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>

      <!-- rightbar -->
    <div class="rightbar" id="rightbar">
      <div class="right-content">
        <img src="images/user.png" alt="no image"  width="30px" > 
        <p>Mack Banjo</p>
        <p>xyz@gmail.com</p>
        <br>
        <hr>
        <br>
        <ul>
          <li><a href="profile">Profile</a></li>
          <li><a href="login">Signout</a></li>
          <li><a href="contact">Help</a></li>
        </ul>
      </div>
    </div>
  
    <!-- Right Content -->
    <div class="right-content">
      <div class="profile_icon" id="profile_icon">
        <img src="images/profilelogo.png" alt="no image"  width="35x" > 
      </div>
  </div>
      <h1 id="mt" align="center">Drainage Block Alert System</h1>
    </div>
    
    <br>
    <div id="c1">
      <marquee style="color:rgb(206, 30, 30)">Block Detected at kunnukuzhy lane House No 2345</marquee>
      </div>
      <br><br>
    <div class="desc">
    <h3 id="t1">Welcome to the official site of Drainage Block Detection and Alert System by  Thiruvananthapuram Municipal Corporation</h3>
   </div>
   <br>

   <main>      
    <h2 id="t5">List of Blocks Detected by the sensors and Reported by the Users</h2>

      <% if (reports.length > 0) { %>
        <% reports.forEach(report => { %>
          <article class="news-item">
              <div class="p1">
                <a href="https://maps.app.goo.gl/osbe5iMs3mcsgbMe9">
                  <p style="color: #000000;">
                    <img src="/images/profilelogo.png" alt="no image" width="30px">
                    <i><%= report.name %></i>
                  </p>
                </a>
                <br>
                <p><%= report.block_details %></p>
                <br>
                <p class="date"><%= new Date(report.reported_at).toLocaleString() %></p>
              </div>
              
              <div class="p2">
                <% if (report.photo_path) { %>
                  <a href="/uploads/<%= report.photo_path.split('/').pop() %>">
                    <img src="<%= report.photo_path.split('/').pop() %>" 
                         alt="Report photo" width="230" height="144">
                  </a>
                <% } else { %>
                  <img src="/images/default-drainage.jpg" alt="Default image" width="230" height="144">
                <% } %>
              </div>
          </article>
        <% }) %>
      <% } else { %>
        <div class="no-reports">
          <p>No drainage blocks reported yet. Be the first to report!</p>
        </div>
      <% } %>
  </main>

<article class="report-box">
  <div class="report" >
    <h3>You can Report Drainage Block Here</h3>
    <br>
    <div class="report_img">
      <a href="images"><img  src="images/report.png" alt="no image found" width="230" height="180"></a>
    </div>
    <div class="report_button">
      <button><a href="report">Report</a></button>
    </div>
  </div>
</article>

  <footer>
      <p>&copy; 2025 Drainage Block Alert System. All Rights Reserved</p>
  </footer>

</div>

  <script src="js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
</html>

