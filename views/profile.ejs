<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Drainage Block Alert</title>
  <link rel="stylesheet" href="public/profile.css">
</head>
<body>
  <header>
    <h1>Drainage Block Alert</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <section class="profile-section">
      <h2>User Profile</h2>
      <div class="user-info">
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Phone:</strong> <%= user.phone %></p>
      </div>

      <h3>Reported Drainage Blocks</h3>
      <div class="drainage-blocks">
        <% if (drainageBlocks.length > 0) { %>
          <% drainageBlocks.forEach(block => { %>
            <div class="block-item">
              <p><strong>Location:</strong> <%= block.location %></p>
              <p><strong>Description:</strong> <%= block.description %></p>
              <p><strong>Reported At:</strong> <%= block.reportedAt.toLocaleString() %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No drainage blocks reported yet.</p>
        <% } %>
      </div>
    </section>
  </main>

  <footer>
    <p>&copy; 2023 Drainage Block Alert. Developed by IT Students, Barton Hill Engineering College.</p>
  </footer>

  <script src="public/profile.js"></script>
</body>
</html>